class Sorting {

    static void bubbleSort(int[] arr) {
        for (int i = 0; i < arr.length; i++)
            for (int j = 0; j < arr.length - 1; j++)
                if (arr[j] > arr[j + 1]) {
                    int t = arr[j];
                    arr[j] = arr[j + 1];
                    arr[j + 1] = t;
                }
    }
}
public class Main {
    public static void main(String[] args) {

        int[] arr = {5, 1, 4, 2, 8};
        Sorting.bubbleSort(arr);

        for (int x : arr)
            System.out.print(x + " ");
    }
}
